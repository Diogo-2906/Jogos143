<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jogos143</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Jogos143.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="top-header">
        <div class="logo-area">
            <img src="/img/Logo.png" class="logo-icon" />
            <span class="logo-text">Jogos143</span>
        </div>
    </header>

    <div class="container main-content">
        @RenderBody()
    </div>
</body>
<style>

    body {
        background-color: #3f3f3f;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .top-header {
        background-color: #6b6b6b;
        padding: 15px 30px;
        display: flex;
        align-items: center;
    }

    .logo-area {
        display: flex;
        align-items: center;
    }

    .logo-icon {
        width: 50px;
        margin-right: 10px;
    }

    .logo-text {
        font-size: 40px;
        font-weight: bold;
        color: #ffeaa7;
    }

    .game-list {
        display: flex;
        justify-content: center;
        gap: 35px;
        margin-top: 40px;
        flex-wrap: wrap;
    }

    .game-card {
        text-align: center;
        color: white;
        width: 150px;
    }

        .game-card img {
            width: 150px;
            height: 200px;
            object-fit: cover;
            border-radius: 6px;
            box-shadow: 0px 0px 8px black;
        }


</style>
</html>
